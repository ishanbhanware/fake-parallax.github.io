    <body>
<div class="calculator">
    <table class="buttons">
        <input type="text" id="txtInputBox" class="inputbox"><br><br></input>
        <button class="clearbutton" onclick="clearValue();">C</button>
        <tr>
            <td><button type="button" id="btnOne" style="padding: 20px;" onClick=setValue(this.value); value="1">1</button></td>
            <td><button type="button" id="btnTwo" style="padding: 20px;" onClick=setValue(this.value); value="2">2</button></td>
            <td><button type="button" id="btnThree" style="padding: 20px;" onClick=setValue(this.value); value="3">3</button></td>
            <td><button type="button" id="btndiv" style="padding: 20px;" class="operatorbutton" onclick="setHiddenValue(this.innerHTML);setValue(this.innerHTML, '0'); operator= '/'; validateval();">/</button></td>
        </tr>
        <tr>
            <td><button type="button" id="btnFour" style="padding: 20px;" onClick=setValue(this.value); value="4">4</button></td>
            <td><button type="button" id="btnFive" style="padding: 20px;" onClick=setValue(this.value); value="5">5</button></td>
            <td><button type="button" id="btnSix" style="padding: 20px;" onClick=setValue(this.value); value="6">6</button></td>
            <td><button type="button" id="btnmul" style="padding: 20px;" class="operatorbutton" onclick="setHiddenValue(this.innerHTML);setValue(this.innerHTML, '0'); operator= '*'; validateval();">*</button></td>
        </tr>
        <tr>
            <td><button type="button" id="btnSeven" style="padding: 20px;" onClick=setValue(this.value); value="7">7</button></td>
            <td><button type="button" id="btnEight" style="padding: 20px;" onClick=setValue(this.value); value="8">8</button></td>
            <td><button type="button" id="btnNine" style="padding: 20px;" onClick=setValue(this.value); value="9">9</button></td>
            <td><button type="button" id="btnplus" style="padding: 20px;" class="operatorbutton" onclick="setHiddenValue(this.innerHTML);setValue(this.innerHTML, '0'); operator= '+'; validateval();">+</button></td>
        </tr>
        <tr>
            <td><button type="button" id="btnZero" style="padding: 20px;" onClick=setValue(this.value); value="0">0</button></td>
            <td><button type="button" id="btndec" style="padding: 20px;" onClick=setValue(this.value); value=".">.</button></td>
            <td><button type="button" id="btnequal" style="padding: 20px;" class="equalButton" onclick="calc(); validateval();">=</button></td>
            <td><button type="button" id="btnminus" style="padding: 20px;" class="operatorbutton" onclick="setHiddenValue(this.innerHTML); onClick=setValue(this.innerHTML, '0'); operator= '-'; validateval();">-</button></td>
        </tr>
    </table>
    <input type="hidden" id="num1"></input>
    <input type="hidden" id="num2"></input>
