      <script>
        function setValue(val, isOperator)
        {

            var inputBoxVal = document.getElementById("txtInputBox").value;
            if(inputBoxVal  != '')
            {
                document.getElementById("txtInputBox").value = inputBoxVal + val;
            }
            else
            {
                document.getElementById("txtInputBox").value = val;
            }
            if(operator != undefined && isOperator != '0')
            {
                document.getElementById("num2").value += val;
                
            }
            
        }

        var operator;

        function setHiddenValue(val)
        {
            val;
            document.getElementById("num1").value = document.getElementById("txtInputBox").value;
        }
        function calc()
        {
            if(document.getElementById("txtInputBox").value == '')
            {
                return;
            }
            num1 = Number(document.getElementById("num1").value);
            num2 = Number(document.getElementById("num2").value);
            var res;
            switch(operator)
            {
                case '+':
                    res = num1 + num2;
                break;

                case '-':
                    res = num1 - num2;
                break;
                case '*':
                    res = num1 * num2;
                break;
                case '/':
                    res = num1 / num2;
                break;

            }
            document.getElementById("txtInputBox").value = res;
            document.getElementById("num1").value = res;
            document.getElementById("num2").value = 0;
            

            
        }

        function clearValue()
        {
            document.getElementById("txtInputBox").value = ""; 
            if(operator = undefined)
            {
                document.getElementById("num2").value = 0;
                document.getElementById("num1").value = 0;
            }
            else
            {
                document.getElementById("num2").value = 0;
                
            }

        }
        function validateval(){
            if(isNaN(Number(document.getElementById("num1").value)))
            {
                alert("Please enter a numeric value or not more than 2 values");
                document.getElementById("txtInputBox").value = "";
                if(operator = undefined)
                {
                    document.getElementById("num2").value = 0;
                    document.getElementById("num1").value = 0;
                }
                else
                {
                    document.getElementById("num2").value = 0;
                
                }
                
                return;
            }
            
            
        }


    </script>
